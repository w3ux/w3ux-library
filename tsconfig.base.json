{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // TODO: use strict mode
    "strict": false,
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "vite.config.js"
  ]
}
